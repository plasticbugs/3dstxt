<!DOCTYPE html>
<html>
<head>
  
<% if @title %>
<title><%= "3DSTXT.com - #{@title}" %></title>
<% else %>
<title>3DSTXT.com - Breaking the 16 Character Limit</title>
<% end %>

<!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
		<%= javascript_include_tag "application" %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js', :defer	=> true, :async => true %>
	<%= javascript_include_tag "bootstrap-alert" %>

<%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
<meta name="viewport" content="width=800px, initial-scale=1.0, user-scalable=yes">

	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-23096106-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
		
	</script>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				      </a>

				<a class="brand" href="/">3DS<span>txt</span></a>
				 
				      <div class="nav-collapse">
					
								<ul class="nav">
									<li><%= link_to_unless_current "Home", root_path do %></li>
										<li class="active"><%= link_to "Home", root_path %></li>
										<% end %>

									<% if signed_in? %>
									<li><%= link_to_unless_current "Message list", user_path(current_user.id) do %></li>
										<li class="active"><%= link_to "Message list", user_path(current_user.id) %></li>
										<% end %>

									<li><%= link_to_unless_current "Your games", user_games_path(current_user.id) do %></li>
										<li class="active"><%= link_to "Your games", user_games_path(current_user.id) %></li>
										<% end %>

									<li><%= link_to_unless_current 'User settings', edit_user_path(current_user.id) do %></li>
										<li class="active"><%= link_to "User settings", edit_user_path(current_user.id) %></li>
									<% end %>
									</ul>

									<ul class="nav pull-right">
									<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
									</ul>



									<% else %>
									</ul>
									<ul class="nav pull-right"><li><%= link_to "Create new account", signup_path %></li>
									<li><%= link_to "Sign in", signin_path %></li>
									</ul>
									<% end %>
					      </div>
			</div>
		</div>
	</div>
	
<div class="container">
<header>
	<% if false %>
	<%= link_to image_tag("new_logo2.png", :alt => '3DSTXT Logo'), root_path %>
	<% end %>
	<%= link_to image_tag("ribbon.png", :alt => 'Make your own 3DS txt!', :class => 'ribbon'), root_path %>
</header>

<% if @banner_text %>
<div class="big_banner"><%= @banner_text %></div>
<% end %>

<div class="row">
	
<div class="span9">
<%= yield %>	
</div>



</div>


<div class="row"><div class="span5"><div class="content-padding"><%= link_to "About this site", pages_about_path %></div></div></div>
</div>
</body>
</html>
