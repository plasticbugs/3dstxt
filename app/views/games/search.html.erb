
<% if flash[:notice] %>
	<div class="row"><div class="alert alert-success span4">
		<%= flash[:notice] %><br/>
	</div></div>
<% end %>


<% if flash[:error] %>
<div class="row"><div class="alert alert-error span4"><%= flash[:error] %></div></div>
<% end %>

<% if false %>
<% if @game && @game.errors.any? %>
	<div class="alert">
    <% @game.errors.full_messages.each do |msg| %>
<p><%= msg %></p>
    <% end %>
</div>
<% end %>
<% end %>

	<h2>Add games to your collection</h2>
<%= form_tag({:controller => "games", :action => "search"}, :method => "get", :class => "form-horizontal") do %>
	<%= label_tag 'Game Title' %><br/>
	<div class="input-append"><%= text_field_tag :query, params[:query], :class => "span2", :id => "appendedPrependedInput", :type => "text" %><button type="submit" class="btn">Add Game</button></div>
	<% end %>
	
	
	
	<% unless @user.games.nil? %>
	<% @user.games.each do |game| %>
		<h2><%= game.asin %></h2>
	<% end %>
	<% end %>
	
	<% if @response %>
	<%= image_tag (@response['Items']['Item'].first['MediumImage']['URL']) %>
	<% end %>