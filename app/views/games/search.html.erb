
<% if flash[:notice] %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<% if @game && @game.errors.any? %>
	<div class="alert">
	<ul>
    <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>
	<h2>Add games to your collection</h2>
<%= form_tag({:controller => "games", :action => "search"}, :method => "get", :class => "form-search") do %>
	<%= label_tag 'Game Title' %><br/>
	<%= text_field_tag :query, params[:query], :class => "input-medium search-query" %>
	
	<%= submit_tag "Add Game", :name => nil %>
	<% end %>
	
	
	
	<% unless @user.games.nil? %>
	<% @user.games.each do |game| %>
		<h2><%= game.asin %></h2>
	<% end %>
	<% end %>
	<% if @response %>
	<%= image_tag (@response['Items']['Item'].first['MediumImage']['URL']) %>
	<% end %>
	
	<% if @response2 %>
		<%= @response2 %>
		<% end %>