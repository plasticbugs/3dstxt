

<% if flash[:error] %>
<div class="errors">
<ul><li>
<%= flash[:error] %></li></ul></div>
<% end %>

<div class="sign_in">
	<h1>Sign in here</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>

	<p><%= f.label "Email (CASE Sensitive!)" %><br/>
	<%= f.text_field :email %></p>


	<p><%= f.label "Password" %><br/>
	<%= f.password_field :password %></p>

	<%= f.submit "Sign in" %><div style="text-align: right; margin-right:30px;"><%= link_to "Forgot your password?", new_password_reset_path %></div>

<% end %>
</div>