

<% if flash[:error] %>
<div class="alert alert-error">
<%= flash[:error] %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
<% end %>

<div class="user_settings">
	<legend>Sign in here</legend>
<%= form_for(:session, :url => sessions_path, :html => {:class => "well"} ) do |f| %>

<%= f.label "Email" %>
	<%= f.text_field :email %>


<%= f.label "Password" %>
	<%= f.password_field :password %>

	<%= f.submit "Sign in", :class => "btn" %>
	<%= link_to "Forgot your password?", new_password_reset_path %>

<% end %>
</div>