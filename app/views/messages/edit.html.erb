<% if @message.errors.any? %>
	<div class="alert alert-error">
		<a class="close" data-dismiss="alert" href="#">&times;</a>
    <% @message.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
</div>
<% end %>

<div id="form">

<%= form_for @message, :url => {:action => 'update'} do |f| -%>

	<%= f.label "Edit your message:", :class => "form_header" %><br/><%= f.text_area :contents, :rows => "10", :cols => "40" %>
	<div class="check_area"><%= f.check_box :display_fc %><span class="label">Display your Friend Code on this page</span></div>
  <div class="create"><%= f.submit "Update" %></div>

<% end -%>
</div>