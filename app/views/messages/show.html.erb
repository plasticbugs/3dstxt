<%= form_for ([@message, @message.comments.build]) do |f| %>
<p class="comment_entry_text"><%= f.label "Enter your comment:" %></p><%= f.text_area :content, :class => "comment_input", :placeholder => "Enter a comment here." %>

<%= f.submit "Post comment", :class => "comment_submit" %>
<% end %>

<div class="comment_box">
	<h1>Comments:</h1>
	<% @comments.each do |comment| %>
	<% if current_user && current_user.id == comment.message.user_id %>
		
			<div class="comment"><p><span class="comment_author"><%= comment.author %></span> <%= comment.created_at.strftime("posted on %B %d @ %I:%M%p") %><%= link_to "Delete Comment", [comment.message, comment], :confirm => "Are you sure you want to delete this comment?", :method => :delete, :alt => 'Delete Comment', :class => 'delete'%></p>
			<%= comment.content.html_safe %></div>

	<% else %>
	<div class="comment"><p><span class="comment_author"><%= comment.author %></span> <%= comment.created_at.strftime("posted on %B %d @ %I:%M%p") %></p>
