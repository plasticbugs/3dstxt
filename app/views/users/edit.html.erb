<% if @user.errors.any? %>
	<div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">&times;</a>
    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
</div>
<% end %>

Logged in as <%= @user.email %>
Current Limit: 6 Messages

<h1>User Settings</h1>
	<%= form_for @user, :html => { :multipart => true, :class => "well"} do |f| -%>
		
		<%= image_tag("friendcode.png", :style => "float:right;") %>
		
		<legend>3DS Friend Code</legend>
		
		<label>Appears at the bottom of your 3DStxt pages</label>
		<%= f.text_field :friend_code, :size => 20, :maxlength => 12  %>
		
	
	
<legend>Notifications</legend>


  <%= f.label "Email me when:" %>
	<label class="checkbox"><%= f.check_box :comment_alert %>someone comments on one of my pages.</label>

	<legend>Profile Picture</legend>

<%= f.label "Upload a profile picture" %>
<%= f.file_field :profile_pic, :style => "width:200px;font-size:14px;" %>

<% if @user.profile_pic? %>
<%= image_tag @user.profile_pic.url(:medium), :class => 'profile' %>
<% end %>


<legend>Password</legend><%= link_to "Change your password", change_password_user_path %>

<%= f.submit "Save user settings", :class => "btn" %>

<% end -%>
