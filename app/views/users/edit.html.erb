<% if @user.errors.any? %>
	<div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">&times;</a>
    <% @user.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
</div>
<% end %>

<div class="content-padding"><span class="label label-success" style="font-size:12px;">Logged in as <%= @user.email %></span><br/>
Current Limit: 6 Messages</div>

<div class="content-padding" ><div class="action-box"><div class="inner-padding" >	<%= form_for @user, :html => { :multipart => true, :class => ""} do |f| -%>
		<div class="form-separator"><h2>3DS Friend Code</h2><%= image_tag("friendcode.png", :style => "float:right;") %><label>Appears at the bottom of your 3DStxt pages</label>
			<%= f.text_field :friend_code, :size => 20, :maxlength => 12  %></div>
			<div class="form-separator"><h2>Notifications</h2><%= f.label "Email me when:" %>
	<label class="checkbox"><%= f.check_box :comment_alert %>someone comments on one of my pages.</label></div>
	<div class="form-separator"><h2>Profile Picture</h2>
<%= f.label "Upload a profile picture" %>
<%= f.file_field :profile_pic, :style => "width:200px;font-size:14px;" %>

<% if @user.profile_pic? %>
<%= image_tag @user.profile_pic.url(:medium), :class => 'profile' %>
<% end %></div>

<div class="form-separator"><h2>Password</h2><%= link_to "Change your password", change_password_user_path %></div>
<button class="btn btn-success" name="commit" type="submit" style="margin-top:20px">Save user settings</button>

<% end -%></div>
</div></div>