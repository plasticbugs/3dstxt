<% if @user.errors.any? %>
	<div class="errors">
	<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<div class="sign_in">
	<h1>Change your password</h1>
<% form_for @user do |f| -%>
  <p><%= f.label "Enter New Password" %><br/>
	<%= f.password_field :password %></p>


	<p><%= f.label "Retype New Password" %><br/>
	<%= f.password_field :password_confirmation %> </p>
	
	<%= f.submit "Change Password" %>
<% end -%></div>

<div class="sign_in">
	Do you want to receive an email when new comments are posted on one of your 3ds message pages?
<% form_for @user do |f| -%>
  <p><%= f.label :comment_alert %><br/>
	<%= f.check_box :comment_alert %></p>
	
	<%= f.submit "Save Setting" %>
<% end -%></div>