<% if @user.errors.any? %>
	<div class="errors">
	<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<div class="logged_in_as">Logged in as <%= @user.email %><br/>
	<span style="font-size:12px;">Current Limit: 6 Messages</span>
</div>
<div class="user_settings">
<div class="setting">	<h1>User Settings</h1>
	<hr/>
<h2>Notifications</h2>

<p><% form_for @user do |f| -%>
  <%= f.label "Email me when:" %><br/>
	<%= f.check_box :comment_alert %>someone comments on one of my pages.
	
	<br/><%= f.submit "Save user settings" %>
<% end -%>
</p>
</div>
<hr/><div class="setting"><h2>Password</h2><%= link_to "Change your password", change_password_user_path %>
</div></div>